{% extends 'base.html.twig' %}

{% block title %}
	Modifier un utilisateur
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<style>
		h1 {
			font-size: 24px;
			font-weight: bold;
			margin-block-end: 20px;
			color: #333;
			text-align: center;
		}

		form {
			display: flex;
			flex-direction: column;
			align-items: center;
			margin-block-start: 20px;
		}

		form input[type='email'],
		form input[type='password'],
		form select {
			padding: 8px;
			margin-block-end: 10px;
			inline-size: 100%;
			max-inline-size: 300px;
			border: 1px solid #ddd;
			border-radius: 4px;
		}

		form button {
			padding: 8px 16px;
			font-size: 14px;
			border-radius: 4px;
			background-color: #007bff;
			border: none;
			color: #fff;
			cursor: pointer;
		}

		form button:hover {
			background-color: #0069d9;
		}

		.success-message {
			margin-block-start: 20px;
			padding: 10px;
			background-color: #d4edda;
			border-color: #c3e6cb;
			color: #155724;
			border-radius: 4px;
		}
	</style>
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="mb-4">Modifier un utilisateur</h1>

		{{ form_start(form) }}
		<div class="mb-3">
			{{ form_row(form.email, {'attr': {'class': 'form-control', 'style': 'max-inline-size: 300px;'}}) }}
		</div>
		<div class="mb-3">
			{{ form_row(form.password, {'attr': {'class': 'form-control', 'style': 'max-inline-size: 300px;'}}) }}
		</div>
		<div class="mb-3">
			{{ form_row(form.role, {'attr': {'class': 'form-control', 'style': 'max-inline-size: 300px;'}}) }}
		</div>

		<button type="submit" class="btn btn-primary">Enregistrer</button>

		{{ form_end(form) }}

		{% for flashMessage in app.flashes('success') %}
			<div class="alert alert-success mt-4" role="alert">{{ flashMessage }}</div>
		{% endfor %}
	</div>

{% endblock %}
