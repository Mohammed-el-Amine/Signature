{% extends 'base.html.twig' %}

{% block title %}Générer une signature
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	<style>
		.modal {
			display: none;
			position: fixed;
			z-index: 1;
			inset-inline-start: 0;
			inset-block-start: 0;
			inline-size: 100%;
			block-size: 100%;
			overflow: auto;
			background-color: rgba(0, 0, 0, 0.4);
		}

		.modal-content {
			background-color: #fff;
			margin: 10% auto;
			padding: 20px;
			border: 1px solid #ddd;
			border-radius: 4px;
			inline-size: 80%;
			block-size: 100%;
			box-shadow: 0 0 8px rgba(0, 0, 0, 0.3);
			max-block-size: 70vh;
		}

		.modal-header {
			padding-block-end: 10px;
			border-block-end: 1px solid #ddd;
			text-align: center;
		}

		.modal-title {
			margin: 0;
			font-size: 20px;
			font-weight: bold;
		}

		.modal-body {
			flex-grow: 1;
			block-size: 100%;
		}

		.close {
			color: #aaa;
			float: inline-end;
			font-size: 28px;
			font-weight: bold;
			cursor: pointer;
		}

		.close:hover,
		.close:focus {
			color: black;
			text-decoration: none;
		}

		#signate-container {
			border: 1px solid #ccc;
			padding: 10px;
		}

		.signature-details {
			max-inline-size: 100%;
		}

		.signature-table {
			inline-size: 100%;

		}

		.hidden-facebook {
			display: none;
		}

		.hidden-unsa {
			display: none;
		}

		.hidden-youtube {
			display: none;
		}

		.hidden-linkedin {
			display: none;
		}

		.hidden-twitter {
			display: none;
		}
	</style>
{% endblock %}

{% block body %}

	<div class="modal"></div>
	<div class="container" style="overflow:auto ;inline-size:100%"><br>
		{# Déconnexion #}
		<div class="d-flex justify-content-end">
			<a href="{{ path('logout') }}" class="btn btn-danger" onclick="removeStorage()">Déconnexion</a>
		</div>

		<div style="display: flex; justify-content: center;">
			<div style="display: flex; align-items: center;">
				<h1 style="text-align: center; margin-inline-end: 10px;">Bienvue sur votre espace personnel
					{{user.email}}
					&nbsp;</h1>

				<section class="userProfile" style="overflow:auto; padding: 10px ;">
					<form class="user-form" method="POST">
						{{ form_start(userForm) }}<br>

						<div class="form-group">
							<div class="input-group">
								{{ form_row(userForm.password, {'attr': {'class': 'form-control', 'type': 'password'}}) }}
								<div class="input-group-append">
									<button class="btn btn-outline-secondary btn-sm" type="button" id="showPasswordBtn" onclick="togglePasswordVisibility('{{ userForm.password.vars.full_name }}')">Afficher</button>
								</div>
							</div>
						</div>

						{{ form_end(userForm) }}
						<br>
					</form>
				</section>

			</div>
		</div><br><br>

		{# Formulaire de recherchedes signatures #}
		<form method="GET" action="{{ path('profile_signature') }}">
			<div class="form-row">
				<div class="form-group col-md">
					<label for="date">Date de création :</label>
					<input type="date" id="date" name="date" class="form-control" value="{{ date }}">
				</div>
				<div class="form-group col-md">
					<label for="nom">Nom :</label>
					<input type="text" id="nom" name="nom" class="form-control" value="{{ nom }}" pattern="^[A-Za-z]+$">
				</div>
				<div class="form-group col-md">
					<label for="email">Email :</label>
					<input type="text" id="email" name="email" class="form-control" value="{{ email }}" pattern="^[A-Za-z0-9@.]+$">
				</div>
			</div>

			<button type="submit" class="btn btn-primary">Rechercher</button>
		</form><br>

		<section class="all_signatures" style="overflow:auto;">

			<table class="table border">
				<thead class="table-dark">
					<tr>
						<th>Nom et Prénom</th>
						<th>Adresse email</th>
						<th>Date de création</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for signature in pagination %}
						<tr>
							<td>
								<section class="view_signature d-flex justify-content-center align-items-center mt-5 signature-details">
									<div class="border p-3">
										<table border="0" cellpadding="0" width="555" class="signature-table">
											<tbody>
												<tr>
													<td align="left" valign="middle" width="10" class="signature-cell"><br>
														<p style="padding-inline-end: 10px;font-size: 12px;line-height: 14px;">
															<a href="{{signature.logo.refLink}}"><img id="logoEdit" src="https://lab-web.unsa.org/signature{{signature.logo.path}}" class="border-0" style="border: none;inline-size: 120px;" alt=""></a>
														</p>
													</td>
													<td><br>
														<p style="font-family: -apple-system, BlinkMacSystemFont, \'Segoe UI\', Roboto, \'Helvetica Neue\', Arial, sans-serif;font-size: 12px; line-height: 14px; color: #000;text-align: start;">
															<span id="nameEdit" class="font-weight-bold" style="color: #000;font-weight: bold;font-size: 14px;">
																{% set name = signature.name|split('&') %}
																{{name[0]}}
																{{name[1]}}
															</span><br>
															<span id="roleEdit" style="color: #666;">
																<i>{{signature.role}}</i>
															</span><br>
															<span id="organizationEdit" style="color: #666;">
																<i>{{signature.organization}}</i>
															</span><br>
														</p>
														<p style="font-family: -apple-system, BlinkMacSystemFont, \'Segoe UI\', Roboto, \'Helvetica Neue\', Arial, sans-serif;font-size: 12px; line-height: 14px; color: #000;">
															<span style="color: #000;" id="addressEdit">{{signature.adress}}</span><br>
															<span style="color: #000;" id="zipCodeEdit">{{signature.zipCode}}&nbsp;</span>
															<span style="color: #000;" id="cityEdit">{{signature.city}}</span><br>
														</p>
														<p style="font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;font-size: 12px; line-height: 14px; color: #000;">
															<img src="https://lab-web.unsa.org/signature/img/Application/mail.png" class="border-0" style="border: none;block-size: 12px;margin-inline-end: .5em;">
															<a id="emailEdit" href="mailto:{{signature.email}}" style="color: #666; font-style: italic;">{{signature.email}}</a><br>
															{% set phoneNumbers = signature.phone|split(' - ') %}

															{% if phoneNumbers|length == 2 %}
																<img src="https://lab-web.unsa.org/signature/img/Application/phone.png" class="border-0" style="border: none; block-size: 14px; margin-inline-end: .5em;">
																{{ phoneNumbers[0] }}
																&ensp;&ensp;<img src="https://lab-web.unsa.org/signature/img/Application/mobile.png" class="border-0" style="border: none; block-size: 14px; margin-inline-end: .5em;">
																{{ phoneNumbers[1] }}
															{% else %}
																{% set prefix = signature.phone|slice(0, 2) %}
																{% if prefix == '01' %}
																	<img src="https://lab-web.unsa.org/signature/img/Application/phone.png" alt="Image pour 01" class="border-0" style="border: none; block-size: 14px; margin-inline-end: .5em;">
																	{{ signature.phone }}
																{% elseif prefix == '06' %}
																	<img src="https://lab-web.unsa.org/signature/img/Application/mobile.png" alt="Image pour 06" class="border-0" style="border: none; block-size: 14px; margin-inline-end: .5em;">
																	{{ signature.phone }}
																{% endif %}
															{% endif %}
														</p>
														{% if signature.logo2 is not null %}
															<td align="right" valign="middle" width="10"><br>
																<p style="padding-inline-end: 10px; font-size: 12px; line-height: 14px;">
																	<a href="https://www.unsa.org/"><img alt="" src="https://lab-web.unsa.org/signature{{signature.logo2.path}}" style="border: none; inline-size: 120px;"></a>
																</p>
															</td>
														{% endif %}
													</td>
												</tr>
											</tbody>

										</table>
										{% set socialLinks = {
											"facebook": "data:image/png;base64,",

											"unsa": "data:image/png;base64,",

											"youtube": "data:image/png;base64,",

											"linkedin": "data:image/png;base64,",

											"twitter": "data:image/png;base64,"
										} %}

										{% if signature.unsa is not null %}
											<a href="{{signature.unsa}}" style="color:#4267B2;font-weight: bold; font-size: 14px;text-decoration:none"><img src="{{socialLinks['unsa']}}" alt="UNSA Logo"></a>
										{% endif %}

										{% if signature.facebook is not null %}
											<a href="{{signature.facebook}}" style="color:#4267B2;font-weight: bold; font-size: 14px;text-decoration:none"><img src="{{ socialLinks['facebook'] }}" alt="Facebook Logo"></a>
										{% endif %}

										{% if signature.youtube is not null %}
											<a href="{{signature.youtube}}" style="color:#4267B2;font-weight: bold; font-size: 14px;text-decoration:none"><img src="{{socialLinks['youtube']}}" alt="Youtube Logo"></a>
										{% endif %}

										{% if signature.linkedin is not null %}
											<a href="{{signature.linkedin}}" style="color:#4267B2;font-weight: bold; font-size: 14px;text-decoration:none"><img src="{{socialLinks['linkedin']}}" alt="Linkedin Logo"></a>
										{% endif %}

										{% if signature.twitter is not null %}
											<a href="{{signature.twitter}}" style="color:#4267B2;font-weight: bold; font-size: 14px;text-decoration:none"><img src="{{socialLinks['twitter']}}" alt="Twitter Logo"></a>
										{% endif %}

									</div>
								</section><br>
							</td>
							<td class="text-center align-middle">{{ signature.email }}</td>
							<td class="text-center align-middle">{{ signature.createAT|date('d-m-Y') }}</td>
							<td class="text-center align-middle">
								<div style="display: flex; justify-content: center; align-items: center; gap: 5px">
									<button class="btn btn-warning" onclick="openModal('{{ path('edit_signature',{ id: signature.id }) }}')">&#128221;</button>
									<button class="btn btn-secondary" onclick="openModal('{{ path('html_signature',{id: signature.id}) }}')">HTML</button>
									<button class="btn btn-success" onclick="openModal('{{ path('png_signature',{id: signature.id}) }}')">PNG</button>
								</div>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</section>
		<div class="pagination">
			{{ knp_pagination_render(pagination) }}
		</div>
		<br><hr><br>


