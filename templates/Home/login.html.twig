{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <br><br><br>
    <div class="container custom-body">
        <div class="row justify-content-center">
            <div class="col-md-6"><br><br><br>
                <div class="card bg-light">
                    <div class="card-header">
                        <h1 class="gothic-title">UNSA SIGNATURE</h1>
                    </div>
                    <div class="card-body">
                        <div class="text-center">
                            <img src="https://lab-web.unsa.org/signature/img/Acceuil_UNSA.png" alt="Logo">
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-md-10 offset-md-1">
                                {{ form_start(loginForm) }}
                                <div class="form-group">
                                    {{ form_label(loginForm.email) }}
                                    {{ form_widget(loginForm.email, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(loginForm.email) }}
                                    {% for flashError in app.flashes('danger') %}
                                        <div class="alert alert-danger">{{ flashError }}</div>
                                    {% endfor %}
                                    {% for flashSuccess in app.flashes('success') %}
                                        <div class="alert alert-success">{{ flashSuccess }}</div>
                                    {% endfor %}
                                </div>
                                <div class="form-group">
                                    {{ form_label(loginForm.password) }}
                                    {{ form_widget(loginForm.password, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(loginForm.password) }}
                                </div>
                                <div class="form-group text-center">
                                    <button type="submit" class="btn btn-primary">Se connecter</button>
                                </div>
                                {{ form_end(loginForm) }}
                            </div>
                        </div>
                    </div>
                </div><br><br><br>
            </div>
        </div>
    </div>
{% endblock %}
